{
  "name": "@salto-io/salesforce-formula-parser",
  "version": "0.0.2",
  "license": "Apache-2.0",
  "description": "Salto Salesforce formula parser",
  "repository": {
    "type": "git",
    "url": "https://github.com/salto-io/salesforce-formula-parser"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src",
    "index.ts",
    "tsconfig.json",
    "*.js"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn concurrently \"yarn lint\" \"yarn build-ts\"",
    "test": "jest",
    "clean": "rm -rf ./dist .eslintcache",
    "build-ts": "tsc -b",
    "watch-ts": "tsc -b -w",
    "lint": "eslint --cache --max-warnings 0 --ext .js,.jsx,.ts,.tsx ./",
    "lint-fix": "yarn lint --fix",
    "postinstall": "tsc --outDir ./dist"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^12.7.1",
    "@types/lodash": "^4.14.168",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "eslint": "^6.2.2",
    "eslint-config-airbnb": "18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "concurrently": "^5.2.0",
    "jest": "^27.4.5",
    "jest-extended": "^1.2.0",
    "ts-jest": "^27.1.2",
    "typescript": "4.1.3"
  }
}
